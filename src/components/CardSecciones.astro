---
const { id, title = '', atencion = false, importante = false } = Astro.props

const CARD_CSS_ATENCION = 'bg-red-400 dark:bg-red-900 font-bold'
const CARD_CSS_IMPORTANTE = 'bg-cyan-200 dark:bg-cyan-800'
const CARD_CSS_DEFAULT = 'bg-slate-200 dark:bg-zinc-800'

const cardClass = atencion
	? CARD_CSS_ATENCION
	: importante
	? CARD_CSS_IMPORTANTE
	: CARD_CSS_DEFAULT
---

<section
	id={id}
	class={`my-5 rounded-md p-2 dark:shadow-black shadow-md shadow-zinc-400 dark:text-white ${cardClass}`}>
	<article class="mx-2 mb-2 lg:mx-5">
		<h3 class="mb-4">{title}</h3>
		<slot />
	</article>
</section>
